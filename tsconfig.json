{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
        "webpack-env",
        "jest"
        ],
        "paths": {
        "@/*": [
            "src/*"
        ]
        },
        "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
        ]
    },
    "files" : [
        "./node_modules/vuex/types/vue.d.ts"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx" ],
    "exclude": [
        "node_modules", "archives"
    ]
}
